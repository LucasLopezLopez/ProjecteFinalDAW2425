         <children>
            <Button fx:id="botoVolverInici" alignment="CENTER" mnemonicParsing="false" onAction="#obrirLogin" prefHeight="45.0" prefWidth="100.0" text="Inici">
               <font>
                  <Font name="Consolas" size="12.0" />
               </font>
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </Button>
            <Button fx:id="botoRegistreEnviar" alignment="CENTER" mnemonicParsing="false" onAction="#registrarUsuari" prefHeight="45.0" prefWidth="100.0" text="Registrarse">
               <font>
                  <Font name="Consolas" size="12.0" />
               </font>
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </Button>
         </children>
         <VBox.margin>
            <Insets />
         </VBox.margin>
         <padding>
            <Insets bottom="30.0" top="30.0" />
         </padding>
      </HBox>
